{
	"compilerOptions": {
		"target": "ESNext",
		"module": "esnext",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"jsx": "react-jsx",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./",
		"moduleResolution": "bundler",
		"paths": {
			"@/*": ["src/*"],
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/__tests__/**"]
}
